{
    "build": {
        "distDir": "../build",
        "devPath": "http://localhost:3000",
        "beforeDevCommand": "pnpm start",
        "beforeBuildCommand": "mkdirp build && pnpm build"
    },
    "tauri": {
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "de.fabianlars.mwtoolbox",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "resources": [],
            "externalBin": [],
            "copyright": "MIT",
            "category": "DeveloperTool",
            "shortDescription": "mw-toolbox GUI",
            "longDescription": "mw-toolbox GUI"
        },
        "allowlist": {
            "all": false,
            "dialog": {
                "all": false,
                "open": true
            },
            "shell": {
                "all": false,
                "open": true
            }
        },
        "windows": [
            {
                "title": "mw-toolbox by FabianLars",
                "width": 1280,
                "height": 720,
                "minWidth": 500,
                "minHeight": 480,
                "resizable": true
            }
        ],
        "security": {
            "csp": "default-src blob: data: filesystem: ws: http: https: 'unsafe-eval' 'unsafe-inline' 'self' img-src: 'self'"
        },
        "updater": {
            "active": true,
            "dialog": true,
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVCRjExMDk5REExQTlBNjgKUldSb21ocmFtUkR4V3lyaW1kQmQvYklqeGkyd2R1TmExQ1MzQVVJanpEZ3A4WjY3M0xsc3BFZU4K",
            "endpoints": [
                "https://api.fabianlars.de/v1/update/mw-toolbox/{{target}}/{{current_version}}"
            ]
        }
    }
}
