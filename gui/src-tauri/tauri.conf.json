{
    "build": {
        "distDir": "../build",
        "devPath": "http://localhost:3000",
        "beforeDevCommand": "yarn --cwd .. start",
        "beforeBuildCommand": "echo \"Not working at the moment :( \" && yarn --cwd .. build"
    },
    "tauri": {
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "de.fabianlars.mwtoolbox",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "resources": [],
            "externalBin": [],
            "copyright": "MIT",
            "category": "DeveloperTool",
            "shortDescription": "mw-toolbox GUI",
            "longDescription": "mw-toolbox GUI"
        },
        "allowlist": {
            "all": false
        },
        "windows": [
            {
                "title": "mw-toolbox by FabianLars",
                "width": 1280,
                "height": 720,
                "minWidth": 1280,
                "minHeight": 720,
                "resizable": true
            }
        ],
        "security": {
            "csp": "default-src blob: data: filesystem: ws: http: https: 'unsafe-eval' 'unsafe-inline'"
        }
    }
}
