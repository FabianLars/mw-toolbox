{
    "extends": ["config:base"],
    "lockFileMaintenance": {
        "enabled": true,
        "schedule": ["before 5 am"]
    },
    "packageRules": [
        {
            "automerge": true,
            "automergeType": "branch",
            "matchUpdateTypes": ["patch", "pin", "digest"]
        },
        {
            "automerge": true,
            "automergeType": "branch",
            "matchUpdateTypes": ["minor"],
            "matchCurrentVersion": ">=1.0.0"
        }
    ]
}
